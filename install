export BORG=$PWD
source ./common.sh

# Install poetry to POETRY_HOME. 
[ -d ${POETRY_HOME} ] || curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python -

git clone https://github.com/magicmonty/bash-git-prompt ${BORG_BUILD}/magicmonty

hide () {
    mkdir -p ~/.hide
    DT=$(date "+%Y%m%dT%H%M%S")
    cp ${HOME}/${1} ${HOME}/.hide/${1}.${DT}
}
hide .bashrc
hide .profile

cat > ~/.profile <<PROFILE
    export BORG=$BORG
    source \$BORG/dot.profile
PROFILE

cat > ~/.bashrc <<BASHRC
    source \$BORG/dot.bashrc
BASHRC

