export BORG=$PWD
source ./common.sh

# Install poetry to POETRY_HOME. 
[ -d ${POETRY_HOME} ] || curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python -


DT=$(date "+%Y%m%dT%H%M%S")
hide () {
    mkdir -p ~/.hide
    cp ${HOME}/${1} ${HOME}/.hide/${1}.${D}
}
hide .bashrc
hide .profile

cat > ~/.profile <<DOC
export BORG=$BORG
git clone https://github.com/bryanhann/dot.borg \$BORG 2> /dev/null
source \$BORG/profile.sh
DOC

cat > ~/.bashrc <<BASHRC
source \$BORG/bashrc.sh
BASHRC

